                @Html.EditorFor(model => model.CiudadName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CiudadName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CiudadDescription, htmlAttributes: new { @class = "control-label col-md-2" })
